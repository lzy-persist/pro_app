<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:background="@drawable/head_title_bg"
        android:layout_alignParentTop="true"
       >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/user_info"
            android:textColor="@color/black"
            android:textSize="14.0dip" 
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
     </RelativeLayout>
	 <RelativeLayout
        android:id="@+id/userinfos"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_top"
       >
       <QuickContactBadge
           android:id="@+id/quickContactBadge1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/main_top"
           android:layout_marginLeft="24dp"
           android:layout_marginTop="20dp" 
           android:src="@drawable/linkman"
           />

       <TextView
           android:id="@+id/username"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/quickContactBadge1"
           android:layout_marginLeft="26dp"
           android:layout_toRightOf="@+id/quickContactBadge1"
           android:ems="10">

       </TextView>

       <TextView
           android:id="@+id/userChinesename"
           android:layout_width="wrap_content"
           android:singleLine="true"
           android:layout_marginTop="10.0dip"
           android:layout_marginLeft="18dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/quickContactBadge1"
           />
       <TextView
           android:id="@+id/userProvince"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="18dp"
           android:singleLine="true"
           android:layout_below="@+id/userChinesename"
           />
       <TextView android:id="@+id/linkLine" 
           android:layout_width="fill_parent"
           android:layout_marginTop="5.0dip" 
           android:layout_height="1.0dip" 
           android:singleLine="true"
           android:background="@color/darkgray"
           android:layout_below="@+id/userProvince"/>
       <TextView
           android:id="@+id/userMobile"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/linkLine"
           android:layout_marginLeft="18dp"
           />
       <TextView
           android:id="@+id/userEmail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/userMobile"
           android:layout_below="@+id/linkLine"
           android:layout_marginLeft="18dp"
           />
       <TextView
           android:id="@+id/lastLogin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/userMobile"
           />
	</RelativeLayout>
</RelativeLayout>
