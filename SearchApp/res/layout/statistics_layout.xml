<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/statistics_top"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/head_title_bg" >

        <TextView
            android:id="@+id/stattitle"
            android:layout_width="wrap_content"
            android:layout_height="34.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/statis_info"
            android:textColor="@color/black"
            android:textSize="14.0dip" />

        <ImageView
            android:id="@+id/statis_homeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:onClick="homeback"
            android:src="@drawable/home" />
    </RelativeLayout>

	     <ListView
	           android:id="@+id/statislist"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_below="@+id/statistics_top"
	           android:cacheColorHint="#00000000"
	           android:divider="@drawable/green_divider"
	           android:dividerHeight="1.0dip"
	           android:footerDividersEnabled="true"
	           />
</LinearLayout>