<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
	    <RelativeLayout
	        android:id="@+id/set_top"
	        android:layout_width="fill_parent"
	        android:layout_height="30.0dip"
	        android:background="@drawable/head_title_bg"
	        android:layout_alignParentTop="true"
	       >
	        <TextView
	            android:id="@+id/set_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="@string/app_setting"
	            android:textColor="@color/black"
	            android:textSize="@dimen/bottom_tab_font_size" 
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            />
	     </RelativeLayout>

	     <ListView
	           android:id="@+id/setlist"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_below="@+id/set_top"
	           android:cacheColorHint="#00000000"
	           android:divider="@drawable/green_divider"
	           android:dividerHeight="1.0dip"
	           android:footerDividersEnabled="true"
	           >
	     </ListView>
     
    </RelativeLayout>
    
</LinearLayout>